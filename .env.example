# API Configuration
API_HOST=0.0.0.0    # The host to bind the API to. Use 0.0.0.0 to listen on all interfaces
API_PORT=8001       # Trade Manager service port
METRICS_PORT=8091   # Port for Prometheus metrics endpoint

# Service Dependencies
MARKET_ANALYSIS_HOST=market-analysis   # Hostname of the Market Analysis service
MARKET_ANALYSIS_PORT=8000              # Port of the Market Analysis service
TRADE_DISCOVERY_HOST=trade-discovery   # Hostname of the Trade Discovery service
TRADE_DISCOVERY_PORT=8002              # Port of the Trade Discovery service

# Monitoring Configuration
ENABLE_METRICS=true   # Enable Prometheus metrics collection
LOG_LEVEL=INFO        # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# Trading Configuration
MAX_POSITION_SIZE=100000   # Maximum allowed position size in base currency
RISK_PERCENTAGE=2          # Maximum risk per trade as percentage
MAX_DRAWDOWN=10            # Maximum allowed drawdown percentage
STOP_LOSS_PERCENTAGE=2     # Default stop loss percentage
TAKE_PROFIT_PERCENTAGE=4   # Default take profit percentage

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trade_manager   # PostgreSQL connection string

# Security
API_KEY=your-api-key-here   # API key for service authentication
API_KEY_HEADER=X-API-Key    # Header name for API key

# Development
DEBUG=false               # Enable/disable debug mode
ENVIRONMENT=development   # Current environment (development/staging/production)